---
  import Layout from '../layouts/Layout.astro';
  import Card from '../components/Card.astro';
  ---
  <Layout title="Weekday.no">
  	<main>
  		<!DOCTYPE html>
  <html lang="no">
  <head>
      <meta charset="UTF-8">
      <meta name="viewport" content="width=device-width, initial-scale=1.0">
      <link rel="icon" type="image/png" href="https://i.ibb.co/ZPSQ6Hv/favicon.png">
      <title>Weekday.no - til salgs</title>
      <!-- Utviklet av Launchlab AS -->
      <style>
          html, body {
              height: 100%;
              margin: 0;
              padding: 0;
              display: flex;
              align-items: center;
              justify-content: center;
              font-family: Lato, \"Segoe UI\", Avenir, Ubuntu, Tahoma, Verdana, Helvetica, sans-serif;
              text-align: center;
          }
  
          .logo {
              max-width: 90%;
              height: auto;
          }
  
          h1 {
              font-size: 2.5em;
              font-weight: normal;
              text-transform: lowercase;
              margin-top: 20px;
          }
  
          @media (min-width: 600px) {
              h1 {
                  font-size: 4em;
              }
              .logo {
                  max-width: 450px;
              }
          }
      </style>
  </head>
  <body>
      <div>
          <img class="logo" src="https://i.ibb.co/9mCX2xj3/logo-big-blue.png" alt="Launchlab Logo">
          <h1>Domene er til salgs!</h1>
          <p>Send henvendelse til henrik@launchlab.no eller SMS +47 47 81 89 98</p>
      </div>
  </body>
  </html>
  	</main>
  </Layout>
